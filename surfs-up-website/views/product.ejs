<div class="container details-container">
  <!-- Example row of columns -->
  <div class="row">
      <div class="col-md-4 product-container">
        <h3><%= product.title %></h3>
        <img src="/images/<%=product.thumbNailImg %>" alt="">
        <% if(product.onSale){ %>
          <div >
            Original Price:
            <span class="originalPrice">
              $<%=product.originalPrice %>
            </span>
          </div>
          <div >
            <span class="price sale">
              Sale Price:
              $<%=product.price %>
            </span>
          </div>
        <% }else{ %>
          <div class="price">
            $<%=product.price %>
          </div>
        <% } %>
        <p><%=product.description %> </p>
        <p><a class="btn btn-secondary" href="/product/<%=product.id %>/write-review" role="button">Write A Review Â»</a></p>
        <%if(authenticated){ %>
            <h3>Admin Only</h3>
            <p>View Count (<%=product.viewCount %>)</p>
        <%}%>
      </div>
  </div>
</div>
