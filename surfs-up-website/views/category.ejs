<div class="container product-container">
  <!-- Example row of columns -->

  <h1>Category: <%= categoryName %></h1>
  <br>
  <div class="row">
    <% if(noResults){ %>
      No Products have been found
    <%}%>
    <% products.forEach(function(product){ %>
      <div class="col-md-4">
        <h3><%= product.title %></h3>
        <img src="/images/<%=product.thumbNailImg %>" alt="">
        <div class="price">
          $<%=product.price %>
        </div>
        <p><%=product.description %> </p>
        <p><a class="btn btn-secondary" href="/product/<%=product.id %>" role="button">View details Â»</a></p>
      </div>
    <% }) %>
  </div>
</div>
